{
  "name": "scrum-daily-standup-picker",
  "version": "1.1.0",
  "description": "Tool for Scrum teams to initiate the daily standup meeting",
  "repository": "https://github.com/Mokkapps/scrum-daily-standup-picker",
  "homepage": "https://github.com/Mokkapps/scrum-daily-standup-picker",
  "author": {
    "name": "Michael Hoffmann",
    "email": "kontakt@mokkapps.de",
    "url": "https://www.mokkapps.de"
  },
  "license": "MIT",
  "keywords": [
    "scrum",
    "standup",
    "picker",
    "angular",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "clear:temp": "rm -rf dist",
    "ng": "ng",
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build": "npm run postinstall:electron && npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:linux:arm": "npm run build:prod && npx electron-builder build --linux --armv7l",
    "electron:win": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "release": "npm run build:prod && electron-builder build",
    "release:all": "npm run build:prod && npx electron-builder build -mwl -p always",
    "release:win": "npm run build:prod && npx electron-builder build --win -p always",
    "release:mac": "npm run build:prod && npx electron-builder build --mac -p always",
    "release:linux": "npm run build:prod && npx electron-builder build --linux -p always",
    "release:linux:arm": "npm run build:prod && npx electron-builder build --linux --armv7l -p always",
    "test": "npm run postinstall:web && ng test",
    "test:dev": "npm run postinstall:web && ng test --watch",
    "pretest:electron": "npm run clear:temp",
    "test:electron": "npm run build:dev --e2e && mocha"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.6.3",
    "@angular/animations": "6.0.6",
    "@angular/cdk": "^6.3.1",
    "@angular/cli": "6.0.8",
    "@angular/common": "6.0.6",
    "@angular/compiler": "6.0.6",
    "@angular/compiler-cli": "6.0.6",
    "@angular/core": "6.0.6",
    "@angular/forms": "6.0.6",
    "@angular/http": "6.0.6",
    "@angular/language-service": "6.0.6",
    "@angular/material": "^6.3.1",
    "@angular/platform-browser": "6.0.6",
    "@angular/platform-browser-dynamic": "6.0.6",
    "@angular/router": "6.0.6",
    "@ngx-translate/core": "^10.0.1",
    "@ngx-translate/http-loader": "3.0.1",
    "@types/howler": "^2.0.5",
    "@types/jasmine": "^2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "8.9.4",
    "angular-2-local-storage": "^2.0.0",
    "archiver": "^2.1.1",
    "codelyzer": "4.2.1",
    "core-js": "2.5.6",
    "decompress": "^4.2.0",
    "electron": "2.0.3",
    "electron-builder": "20.14.7",
    "electron-is-dev": "^0.3.0",
    "electron-reload": "1.2.2",
    "howler": "^2.0.13",
    "jasmine": "^3.1.0",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "2.0.0",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "mocha": "^5.2.0",
    "node-random-name": "^1.0.1",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "rxjs": "^6.1.0",
    "rxjs-compat": "^6.1.0",
    "shuffle-array": "^1.0.1",
    "spectron": "^3.8.0",
    "ts-node": "6.0.3",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "zone.js": "0.8.26"
  },
  "dependencies": {
    "electron-log": "^2.2.16",
    "electron-updater": "^3.0.2"
  }
}
